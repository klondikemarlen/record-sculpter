{
  "name": "record-sculptor",
  "version": "1.0.2",
  "description": "A flexible library for serializing records into customizable views written in TypeScript. Inspired by Blueprinter, Record Sculptor aims to provide a simple yet powerful way to present and manipulate data objects.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "format": "prettier . --write",
    "lint": "eslint --fix src/**/*.ts tests/**/*.ts",
    "test": "jest --watch --onlyChanged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klondikemarlen/record-sculptor.git"
  },
  "keywords": [
    "serialization",
    "custom-views",
    "field-mapping",
    "data-transformation",
    "json",
    "typescript"
  ],
  "author": "Marlen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/klondikemarlen/record-sculptor/issues"
  },
  "homepage": "https://github.com/klondikemarlen/record-sculptor#readme",
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/lodash": "^4.14.197",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
